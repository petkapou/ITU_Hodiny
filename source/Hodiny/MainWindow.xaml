                        <TextBox x:Name="TextBox_Hand_Red" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="{Binding ElementName=Slider_Hand_Red,Path=Value}" Height="22" Width="28" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

                        <Label x:Name="Label_Hand_Green" Grid.Row="4" Grid.Column="0" Content="Green:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <Slider x:Name="Slider_Hand_Green" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" ValueChanged="Slider_Hand_Green_ValueChanged" Maximum="255" SmallChange="1" SelectionEnd="-1" LargeChange="10"/>
                        <TextBox x:Name="TextBox_Hand_Green" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="{Binding ElementName=Slider_Hand_Green,Path=Value}" Height="22" Width="28" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

