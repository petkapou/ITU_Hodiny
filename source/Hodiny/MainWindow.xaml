                        <Label Content="Lenght:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <Slider x:Name="Slider_Lenght" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" Maximum="1" SmallChange="0.01" SelectionEnd="-1" LargeChange="0.1" ValueChanged="Slider_Lenght_ValueChanged"/>
                        <TextBox x:Name="TextBox_Lenght" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="{Binding ElementName=Slider_Lenght,Path=Value}" Height="22" Width="28" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                     </Grid>
                </TabItem>

