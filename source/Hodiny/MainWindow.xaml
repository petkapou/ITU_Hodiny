            <Rectangle x:Name="Rectangle_Bg" Fill="Gray" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.IsSharedSizeScope="True"/>
            <Label Name="Digital_Date" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,100,0,0" Content="5/12/2017"/>
            <Label Name="Digital_Time" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,100,0" Content="5/12/2017"/>
        </Grid>

        <Grid x:Name="Grid_AnalogClock" Opacity="{Binding ElementName=Slider_Transparency,Path=Value}"  Visibility="Visible">
            <Ellipse x:Name="Ellipse_Bg" Fill="Gray" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.IsSharedSizeScope="True"/>
            <Label Name="Analog_Date" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,30,0,0" Content="5/12/2017"/>

            <Rectangle Name="rectangleHour"  VerticalAlignment="Center" HorizontalAlignment="Center" Width="5" Height="70"  RenderTransformOrigin="0.5,1" Fill="Yellow">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <RotateTransform x:Name="hourHandRotate" Angle="0" />
                        <TranslateTransform x:Name="hourHandTransform" Y="-35"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>

            <Rectangle Name="rectangleMinute" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="Green" Width="5" Height="90"  RenderTransformOrigin="0.5,1">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <RotateTransform x:Name="minuteHandRotate" Angle="0" />
                        <TranslateTransform x:Name="minuteHandTransform" Y="-45"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>

            <Rectangle Name="rectangleSecond" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="Blue"  Width="5" Height="120" RenderTransformOrigin="0.5,1">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <RotateTransform x:Name="secondHandRotate" Angle="0" />
                        <TranslateTransform x:Name="secondHandTransform" Y="-60"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Grid>
    </Grid>
</Window>
